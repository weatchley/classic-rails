!!! Strict
%html
  %head
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}
    = stylesheet_link_tag 'yui2/reset-fonts-grids.css'
    = stylesheet_link_tag 'yui2/progressbar.css'
    = stylesheet_link_tag 'application.css'
    = yield :css_includes

    = javascript_include_tag :defaults
    = javascript_include_tag 'yui2/yahoo-dom-event.js'
    = javascript_include_tag 'yui2/element-min.js'
    = javascript_include_tag 'yui2/progressbar-min.js'
    = yield :js_includes

    = csrf_meta_tag

    %title Cyber Security Controls Continuous Monitoring

  %body.yui-skin-sam
    #doc4.yui-t4
      #hd
        #seal
          = image_tag 'doe_seal.png', {:width => 80, :height => 80}
        #appname
          Cyber Security Controls Continuous Monitoring
        #orgname
          #{applicationLabel}
        #user_logged_in
          = raw logged_in_string if user_signed_in?
        -#navline
          = render :partial => 'layouts/topnavlinks'
      #bd
        #yui-main
          .yui-b
            #flash_msgs
              = render :partial => 'layouts/flash_msgs'
            #main_content
              = yield :layout
        #nav_block.yui-b
          = render :partial => 'layouts/navlinks' if user_signed_in?
      #ft
